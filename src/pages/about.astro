---
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import MainLayout from "@/layouts/MainLayout.astro";
import features from "@data/about.json";

import { SITE } from "@data/constants";

const pageTitle: string = `Sobre Nosotros | ${SITE.title}`;
---


<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/contact",
    "url": "https://screwfast.uk/contact",
    "name": "Contact Us | ScrewFast",
    "description":
      "Have questions or want to discuss a project? Reach out, and let's craft the perfect solution with our tools and services.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://alboradadelvalle.cl",
      "name": "ScrewFast",
      "description":
        "ScrewFast offers top-tier hardware tools and expert construction services to meet all your project needs.",
    },
    "inLanguage": "en-US"
  }}
>
  <FeaturesGeneral
    title="ALBORADA DEL VALLE SPA"
    subTitle="Somos una empresa comercializadora mayorista de productos prefabricados en hormigón armado y urbanismo, también realizamos instalaciones de barreras de hormigón armado a lo largo de chile, Llevamos operativos 2 años en el mercado Nacional."
    features={features}
  />
</MainLayout>